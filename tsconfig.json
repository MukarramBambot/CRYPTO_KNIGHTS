{
  "compilerOptions": {
    "target": "ES2022", // or your desired target
    "lib": [
      "DOM", // Include DOM library
      "DOM.Iterable",
      "ES2023" // or your desired ECMAScript version
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
